---
//src/components/author.astro
// Display the key information about a particular author
import { Icon } from 'astro-icon';
const { author={}, count, level="2" } = Astro.props;

// Debugging What is comming into this component?
console.log(`level ${level}`);

---

{author.fullname &&

<div class="space-y-12 sm:divide-y sm:divide-gray-200 sm:space-y-0 sm:-mt-8 lg:gap-x-8 lg:space-y-0" >
  <!-- <div> {JSON.stringify(author)} </div> -->
  <!-- <img class="h-32 w-32 bg-white p-2 rounded-full shadow mb-4" src={author.photo} > -->


  <div class="sm:py-8">
    <div class="space-y-4 sm:grid sm:grid-cols-3 sm:items-start sm:gap-6 sm:space-y-0">
      
      <div class="aspect-w-3 aspect-h-2 sm:aspect-w-3 sm:aspect-h-4">
        <img class="object-cover shadow-lg rounded-lg" src={author.photo} alt="Photo of author" width="200" height="200">
      </div>

      <div class="sm:col-span-2">
        <div class="space-y-4">
          
          <div class="text-lg leading-6 font-medium space-y-1">
            
            { level == "2" &&
            <h2><a href={"/authors/" + author.key}>{author.fullname}</a> {count && " - " + count +" Posts"}</h2>
            }
            { level == "3" &&
            <h3><a href={"/authors/" + author.key}>{author.fullname}</a> {count && " - " + count +" Posts"}</h3>
            }

            <p class="text-indigo-600">{author.role}</p>
          </div>

          <div class="text-lg">
            <p class="text-gray-500">{author.blurb}</p>
          </div>

          <div class="flex space-x-5">

            {author.twitter &&
            <div>
              <a href={"https://twitter.com/" + author.twitter} class="text-gray-400 hover:text-gray-500">
                <span class="sr-only">Twitter</span>
                <Icon size={24} name='mdi:twitter' />
              </a>
            </div> }

            {author.linkedin &&
            <div>
              <a href={"https://linkedin.com" + author.linkedin} class="text-gray-400 hover:text-gray-500">
                <span class="sr-only">LinkedIn</span>
                <Icon size={24} name='mdi:linkedin' />
              </a>
            </div> }

            {author.website &&
            <div>
              <a href={author.website} class="text-gray-400 hover:text-gray-500">
                <span class="sr-only">Website</span>
                <Icon size={24} name='mdi:internet' />
              </a>
            </div> }

          </div>

        </div>
      </div>
    </div>
  </div>

</div>
}