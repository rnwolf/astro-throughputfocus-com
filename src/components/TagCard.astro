---
//src/components/author.astro
// Display the key information about a particular author
import { Icon } from 'astro-icon';
const { tag={}, count } = Astro.props;

// Debugging What is comming into this component?
// console.log(author);

---

{tag.title &&

<div class="space-y-12 sm:divide-y sm:divide-gray-200 sm:space-y-0 sm:-mt-8 lg:gap-x-8 lg:space-y-0" >
  <!-- <div> {JSON.stringify(tag)} </div> -->

  <div class="sm:py-8">
    <div class="space-y-4 sm:grid sm:grid-cols-3 sm:items-start sm:gap-6 sm:space-y-0">
      
      <div class="aspect-w-3 aspect-h-2 sm:aspect-w-3 sm:aspect-h-4 mt-6 ml-6">
          <Icon size={120} name={tag.icon}/>
      </div>

      <div class="sm:col-span-2">
        <div class="space-y-4">
          
          <div class="text-lg leading-6 font-medium space-y-1">
            <h3><a href={"/tags/" + tag.key + "/1"}>{tag.title}</a>{ count && " - " + count + " Posts"}</h3>
          </div>

          <div class="text-lg">
            <p class="text-gray-500">{tag.blurb}</p>
          </div>

        </div>
      </div>
    </div>
  </div>

</div>
}