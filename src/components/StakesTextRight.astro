---
//The Stakes Section
// In this section we want to show the reader that we understand their problems and how critical it is to solve those problems.
import { Icon } from 'astro-icon';
// import Image from "astro-imagetools";
const { heading='Default Heading text goes here', 
        subtext="Default subtext goes here", 
        bgcolour="bg-white",
        stakes = [
          {
            heading: 'Competitive exchange rates',
            text: 'Lorem ipsum, dolor sit amet consectetur adipisicing elit. Maiores impedit perferendis suscipit eaque, iste dolor cupiditate blanditiis ratione.',
            icon: 'mdi:cash-multiple',
          },
          {
            heading: 'Faster',
            text: 'Lorem ipsum, dolor sit amet consectetur adipisicing elit. Maiores impedit perferendis suscipit eaque, iste dolor cupiditate blanditiis ratione.',
            icon: 'mdi:alarm',
          },
        ],
      } = Astro.props;

---
<div class={"py-16 overflow-hidden lg:py-24 " + bgcolour}>
  <div class="relative max-w-xl mx-auto px-4 sm:px-6 lg:px-8 lg:max-w-7xl">
 

    <div class="relative mt-12 sm:mt-16 lg:mt-24">
      <div class="lg:grid lg:grid-flow-row-dense lg:grid-cols-2 lg:gap-8 lg:items-center">
        <div class="lg:col-start-2">
          <h2 class="text-2xl font-extrabold text-gray-900 tracking-tight sm:text-3xl">{heading}</h2>
          <p class="mt-3 text-lg text-gray-500">{subtext}</p>

          <dl class="mt-10 space-y-10">

          {stakes.map(stake => (
              <div class="relative">
                <dt>
                  <div class="absolute flex items-center justify-center h-12 w-12 rounded-md bg-indigo-500 text-white">
                    <Icon size={42} name={stake.icon}  />
                  </div>
                  <p class="ml-16 text-lg leading-6 font-medium text-gray-900">{stake.heading}</p>
                </dt>
                <dd class="mt-2 ml-16 text-base text-gray-500">{stake.text}</dd>
              </div>
            ))
          }

          </dl>
        </div>

        <div class="mt-10 -mx-4 relative lg:mt-0 lg:col-start-1">
          <svg class="absolute left-1/2 transform -translate-x-1/2 translate-y-16 lg:hidden" width="784" height="404" fill="none" viewBox="0 0 784 404" aria-hidden="true">
            <defs>
              <pattern id="e80155a9-dfde-425a-b5ea-1f6fadd20131" x="0" y="0" width="20" height="20" patternUnits="userSpaceOnUse">
                <rect x="0" y="0" width="4" height="4" class="text-gray-200" fill="currentColor" />
              </pattern>
            </defs>
            <rect width="784" height="404" fill="url(#e80155a9-dfde-425a-b5ea-1f6fadd20131)" />
          </svg>
          <!-- <img class="relative mx-auto" width="490" src="https://tailwindui.com/img/features/feature-example-2.png" alt=""> -->
          <div class="relative mx-auto">
            <img src="https://tailwindui.com/img/features/feature-example-2.png" alt="Image description goes here" loading="lazy" width="490" height="" />
          </div> 
        </div>

      </div>
    </div>

  </div>
</div>