---
// src/layouts/BaseSEO.astro

// open graph image should be width/height 1200Ã—630 pixels and no more than 8MB to display properly.

// Twitter card images best max width/height 1200px X 628px and Minimum width x height 600 X 335 pixels and have a maximum file size of 5 MB. PNG, JPEG, or GIF are recommended. 1.91:1 or 16:9 aspect ratio.
// Twitter Summary Card image aspect ratio of 2:1 minimum dimensions of width/height 300x157 pixels and no more than 5MB. JPG, PNG, WEBP and GIF formats.
// https://cards-dev.twitter.com/validator

// LinkedIn image sizes for blog post link images: 1200 x 627
// https://www.linkedin.com/post-inspector/

import { SEO } from "astro-seo";
const {
  title = "Default page title",
  description = "default description",
} = Astro.props;

const {content} = Astro.props;

const {
  openGraphBasicTitle = "Default OG title",
  openGraphBasicType = "website",
  openGraphBasicImage = "https://via.placeholder.com/300x600.png",
  openGraphImageAlt = "A description of what we can see on the image",
  openGraphImageWidth = 300,
  openGraphImageHeight = 600,
  openGraphBasicUrl = "https://via.placeholder.com/300.png",
} = Astro.props;

---
{JSON.stringify({content})}
<SEO
  {title}
  {description}
  openGraph={{
    basic: { 
      title: "hello",  //openGraphBasicTitle,
      type: "website",
      image: openGraphBasicImage,
      url: "smiley",
    },
    image: {
      secureUrl: openGraphBasicImage,
      type: "image/png",
      width: openGraphImageWidth,
      height: openGraphImageHeight,
      alt: openGraphImageAlt,
    },
  }}
/>
